<idea-plugin>
    <id>ua.tarch64.codesync</id>
    <name>CodeSync</name>
    <vendor email="tarasturchenko1551@gmail.com" url="https://github.com/TarasTurchenko">TArch64</vendor>

    <description><![CDATA[
    <h1>CodeSync</h1>
    <h2>Cooperative coding helper</h2>
    <h2>Cooperative coding helper</h2>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij" />

    <actions>
        <group id="ua.TArch64.codesync" text="CodeSync" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <group id="ua.TArch64.codesync.Room">
                <add-to-group group-id="ua.TArch64.codesync" anchor="first"/>

                <action id="ua.TArch64.codesync.room.ConnectAction" class="ua.tarch64.room.actions.ConnectAction" text="Create Room"/>
            </group>
        </group>
    </actions>
</idea-plugin>